@model time_waitting.Models.hcodeModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="row justify-content-sm-center">
        <div class="col-sm-5">
            <div class="card shadow">
                <div class="card-body">
                    <div id="auth-left">
                        @*<h4 class="auth-title">เข้าสู่ระบบ</h4>*@
                        <br>
                        <form asp-action="Index">
                            <div class="form-group position-relative has-icon-left mb-4">
                                <input type="text" asp-for="huser" class="form-control form-control-xl" placeholder="ชื่อผู้ใช้งาน">
                                <div class="form-control-icon">
                                    <i class="bi bi-person"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                <input type="password" asp-for="hpass" class="form-control form-control-xl" placeholder="รหัสผ่าน">
                                <div class="form-control-icon">
                                    <i class="bi bi-shield-lock"></i>
                                </div>
                            </div>
                            <div class="text-danger"> <p>@ViewData["ErrorLogin"]</p></div>
                            <div class="row">
                                <div class="col-8">

                                </div>
                                <div class="col-4">
                                    <button class="btn btn-primary btn-sm right">เข้าสู่ระบบ</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

